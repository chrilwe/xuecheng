<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuecheng.learning.mapper.XcCourseLearningMapper">
	<insert id="addLearningCourse"
		parameterType="com.xuecheng.framework.domain.learning.XcLearningCourse">
		insert into
		xc_learning_course(id,course_id,user_id,valid,start_time,end_time,status)
		values(#{id},#{courseId},#{userId},#{valid},#{startTime},#{endTime},#{status})
	</insert>
</mapper>